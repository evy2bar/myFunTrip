<div class="login-container">
  <div class="jumbotron devise-container">
    <div class="tabs-container">
      <a>Sign up</a> |
      <a href="/users/sign_in" class="active-link">Log in</a>
      </div>

    <div class="facebook-container">
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>

      <!--<button type="button" class="btn btn-primary" aria-label="Left Align">-->
        <!--Sign up with Facebook-->
      <!--</button>-->
    </div>

    <div class="use-email"></div>

    <br />

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
         <%= f.email_field :email, autofocus: true,:class => 'form-control', placeholder: 'Email address' %>

          <% if @minimum_password_length %>
              <em><% @minimum_password_length %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => 'form-control' ,placeholder: "Password (8 characteres minimun) " %>
        <br />

          <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', placeholder: "Confirm password" %>


        <div class="actions">
          <%= f.submit "Sign up", :class => 'btn btn-login-default'%>
        </div>
    <% end %>
  </div>
</div>

